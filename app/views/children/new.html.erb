<div class='w-2/3 md:w-1/2 rounded-lg border border-amber-dark text-amber-dark bg-amber-card pt-2 m-auto shadow-md mt-16'>
  <h2 class="text-xl text-center mb-2">お子様の登録</h2>
  <div class="bg-white rounded-b-lg px-6 py-12">
    <%= form_with model: @new_child, local: true do |f| %>
      <%= render 'shared/error_messages', object: @new_child %>
      <div class='form-group mb-5'>
        <%= f.label :name, class: 'block text-amber-dark font-bold mb-1 pr-4' %>
        <div>
          <%= f.text_field :name, placeholder: '例)太郎', class: 'bg-white border-2 border-amber-dark rounded py-2 px-4 w-4/5 text-amber-dark focus:outline-none focus:border-purple-500' %>
          <span>ちゃん</span>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :stage, class: 'block text-amber-dark font-bold mb-1 pr-4' %>
        <%= f.select :stage, Child.stages.keys.map { |k| [t("enum.child.stage.#{k}"), k] }, { include_blank: true }, class: 'bg-white border-2 border-amber-dark rounded w-full py-2 px-4 text-amber-dark focus:outline-none focus:border-purple-500' %>
      </div>
      <div class='text-center mt-10'>
        <%= f.submit class: 'px-3 py-2 bg-green-300 text-white rounded-md shadow-md hover:shadow-sm' %>
      </div>
    <% end %>
  </div>
</div>