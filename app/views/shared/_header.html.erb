<header class='fixed top-0 left-0 w-full bg-transparent z-50'>
  <div class="flex justify-between items-center px-4 py-2">
    <div class='flex items-center'>
      <%= link_to mypage_path do %>
        <div class='flex flex-row items-center' data-testid='logo'>
          <%= image_tag(asset_path('logo.png'), alt: 'logo_image', class: 'w-10 h-10') %>
          <span class='text-lg text-amber-dark'>コケーボ</span>
        </div>
      <% end %>
      <div class='relative group'>
        <div class='ml-5 text-blue-500 hover:text-blue-300'><%= @child.name %>ちゃん(<%= t("enum.child.stage.#{@child.stage}") %>)▼</div>
        <div class='absolute invisible group-hover:visible bg-amber-light rounded-md'>
          <% current_user.children.each_with_index do |child| %>
            <%= link_to child_change_path(child.id) do %>
              <div class='text-amber-dark p-3 hover:bg-yellow-200' id="<%= "child_#{child.id}" %>"><%= child.name %>ちゃん</div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <%= link_to logout_path, method: :delete do %>
      <button class='py-2 px-2 bg-gray-200 text-amber-dark text-sm rounded-md'>
        ログアウト
      </button>
    <% end %>
  </div>
</header>