<div class='text-center'>
  <p class='mb-3'>教育費シュミレーションの結果が登録されていません</p>
  <%= link_to '教育費シュミレーション', new_simulation_path, class: 'px-3 py-2 bg-amber-vivid rounded-md shadow text-white' %>
</div>
<div class='w-2/3 md:w-1/2 rounded-lg border border-amber-dark text-amber-dark bg-amber-card pt-2 m-auto shadow-md mt-16'>
  <h2 class="text-xl text-center mb-2">積立予定</h2>
  <div class="bg-white rounded-b-lg px-4">
    <%= form_with model: @save_schedule, local: true do |f| %>
      <%= render 'shared/error_messages', object: @save_schedule %>
      <div class='mx-10 py-5'>
        <div class='form-group flex justify-between mb-3'>
          <%= f.label '期間' %>
          <div>
            <%= f.select :age_from, (0..17).to_a, { selected: 0 }, class: 'bg-white border-2 border-amber-dark rounded py-2 px-4 text-amber-dark focus:outline-none focus:border-purple-500' %>
            <span>〜</span>
            <%= f.select :age_to, (1..18).to_a, { selected: 18 }, class: 'bg-white border-2 border-amber-dark rounded py-2 px-4 text-amber-dark focus:outline-none focus:border-purple-500' %>
            <span>才</span>
          </div>
        </div>
        <div class='form-group flex justify-between'>
          <%= f.label :amount %>
          <div>
            <%= f.select :amount, (1..20).to_a.map { |n| [n.to_s + '0,000', n] }, {}, class: 'bg-white border-2 border-amber-dark rounded w-4/5 py-2 px-4 text-gray-700 focus:outline-none focus:border-purple-500' %>
            <span>円</span>
          </div>
        </div>
      </div>
      <div class='text-center'>
        <%= f.submit '登録する', class: 'px-3 py-2 rounded-md shadow-md bg-green-300 text-white' %>
      </div>
    <% end %>
  </div>
</div>
