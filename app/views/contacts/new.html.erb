<h1 class='text-3xl text-amber-dark text-center mb-5'>お問い合わせ</h1>

<%= form_with model: @contact, class: 'w-1/2 m-auto', local: true do |f| %>
  <%= render 'shared/error_messages', object: @contact %>
  <div class='form-group mb-5'>
    <%= f.label :email, class: 'text-amber-dark' %>
    <%= f.email_field :email, class: 'w-full bg-white border-2 border-amber-dark rounded py-2 px-4 text-gray-700 focus:outline-none focus:border-purple-500' %>
  </div>
  <div class='form-group mb-5'>
    <%= f.label :content, class: 'text-amber-dark' %>
    <%= f.text_area :content, class: 'w-full h-64 bg-white border-2 border-amber-dark rounded py-2 px-4 text-gray-700 focus:outline-none focus:border-purple-500' %>
  </div>
  <div class='text-center mb-10'>
    <%= f.submit '送信', class: 'px-3 py-2 bg-green-300 text-white rounded-lg shadow-md hover:shadow-sm' %>
  </div>
<% end %>